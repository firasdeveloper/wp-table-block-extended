<?xml version="1.0"?>
<ruleset name="WP Table Block Extended Coding Standards">
	<description>PHP_CodeSniffer configuration for WP Table Block Extended.</description>

	<!-- What to scan. -->
	<file>wp-table-block-extended.php</file>
	<file>src/</file>

	<!-- Exclude patterns. -->
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/node_modules/</exclude-pattern>
	<exclude-pattern>/build/</exclude-pattern>
	<exclude-pattern>/tests/</exclude-pattern>

	<!-- How to scan. -->
	<arg value="sp"/>
	<arg name="basepath" value="."/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/>

	<!-- Rules: Check PHP version compatibility. -->
	<config name="testVersion" value="8.1-"/>
	<rule ref="PHPCompatibilityWP">
		<include-pattern>*\.php$</include-pattern>
	</rule>

	<!-- Rules: WordPress Coding Standards. -->
	<config name="minimum_wp_version" value="6.0"/>

	<rule ref="WordPress">
		<!-- Allow short array syntax. -->
		<exclude name="Universal.Arrays.DisallowShortArraySyntax"/>

		<!-- Allow PSR-4 class file naming. -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>

		<!-- Allow namespace declarations. -->
		<exclude name="Universal.Namespaces.DisallowDeclarationWithoutName"/>
	</rule>

	<!-- Rules: WordPress-Extra for additional best practices. -->
	<rule ref="WordPress-Extra">
		<exclude name="WordPress.Files.FileName"/>
	</rule>

	<!-- Rules: WordPress-Docs for documentation standards. -->
	<rule ref="WordPress-Docs"/>

	<!-- Verify that the text_domain is set to the plugin slug. -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="wp-table-block-extended"/>
			</property>
		</properties>
	</rule>

	<!-- Verify that everything in the global namespace is prefixed. -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="WTBE"/>
				<element value="wtbe_"/>
			</property>
		</properties>
	</rule>

	<!-- Allow modern PHP features. -->
	<rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

	<!-- Enforce strict types. -->
	<rule ref="SlevomatCodingStandard.TypeHints.DeclareStrictTypes">
		<severity>0</severity>
	</rule>
</ruleset>
