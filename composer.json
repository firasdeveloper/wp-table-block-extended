{
	"name": "firasdeveloper/wp-table-block-extended",
	"description": "Extends the WordPress core table block with custom styling options including header colors, sticky columns, cell widths, and CTA buttons.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Firas Codes",
			"homepage": "https://www.firascodes.ca"
		}
	],
	"homepage": "https://github.com/firasdeveloper/wp-table-block-extended",
	"support": {
		"issues": "https://github.com/firasdeveloper/wp-table-block-extended/issues",
		"source": "https://github.com/firasdeveloper/wp-table-block-extended"
	},
	"require": {
		"php": ">=8.1"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpstan/phpstan": "^1.10",
		"szepeviktor/phpstan-wordpress": "^1.3"
	},
	"autoload": {
		"psr-4": {
			"WTBE\\": "src/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpcbf": "phpcbf",
		"phpstan": "phpstan analyse",
		"lint": [
			"@phpcs"
		],
		"lint:fix": [
			"@phpcbf"
		]
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
